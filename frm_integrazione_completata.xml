          <id type="Products.Archetypes.Field.StringField">hw_presentata</id>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[return context.wf_getInfoFor('review_state') in ['presentata','protocollata']]]></Formula>
          <isDynamicHidewhen type="Products.Archetypes.Field.BooleanField">False</isDynamicHidewhen>
        </element>
        <element id="hw_protocollata" title="Nascondi quando è protocollata o non è stata presentata" type="PlominoHidewhen">
          <id type="Products.Archetypes.Field.StringField">hw_protocollata</id>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[return (context.getItem('numero_protocollo','')!='' or not context.getItem('wf_iol','')=='presentata')]]></Formula>
