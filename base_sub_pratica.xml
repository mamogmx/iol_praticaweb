          <id type="Products.Archetypes.Field.StringField">invio_pec</id>
          <FieldType type="Products.Archetypes.Field.StringField">TEXT</FieldType>
          <FieldMode type="Products.Archetypes.Field.StringField">COMPUTEDONSAVE</FieldMode>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[if context.getItem('pec',''):
    return [context.getItem('pec','')]
else:
    if context.getItem('consenso_pec',False)==True:
        return [context.getItem('progettista_pec','')]
    else:
        return [context.getItem('fisica_pec',''),context.getItem('progettista_pec','')]]]></Formula>
