        <element id="elenco_civici_print" title="elenco_civici_print" type="PlominoField">
          <id type="Products.Archetypes.Field.StringField">elenco_civici_print</id>
          <FieldType type="Products.Archetypes.Field.StringField">SELECTION</FieldType>
          <FieldMode type="Products.Archetypes.Field.StringField">COMPUTEDONSAVE</FieldMode>
          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[elenco = context.getItem('elenco_civici') or []
vie = context.services.elencoVie()
label_vie = [i.split('|')[0] for i in vie]
value_vie = [i.split('|')[1] for i in vie]

if len(elenco):
    elenco_vie = []
    for idx,row in enumerate(elenco):
        cod_via = row[0]
        
        if cod_via in value_vie:
            label = label_vie[value_vie.index(cod_via)]
            civico = row[1]
            interno = row[2]
            ubicaz = '%s %s/%s' %(label,civico,interno)  
            elenco_vie.append(ubicaz)
    return elenco_vie]]></Formula>
