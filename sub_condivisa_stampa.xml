          <Formula type="Products.Archetypes.Field.TextField"><![CDATA[from iol.gisweb.utils.IolDocument import IolDocument
doc = context

db = doc.getParentDatabase()

iDoc = IolDocument(doc)
tipo = iDoc.getIolApp()
tipo_pratica = doc.getItem('iol_tipo_richiesta','')
forms = dict(
    inizio_lavori ='frm_iniziolavori_base',
    fine_lavori = 'frm_finelavori_base',
    integrazione = 'frm_integrazione_base'
)

if tipo_pratica in forms.keys():
    frmName = forms[tipo_pratica]
else:
    frmName = "sub_%s_completa" %tipo
frm = db.getForm(frmName)
result = list()
if frm: 
    for f in frm.getFormFields(includesubforms=True):
        if f.FieldType == 'ATTACHMENT':
            v = doc.getItem(f.id,{})
            for name in v.keys():
                result.append(name)
    result.sort()
return result]]></Formula>
